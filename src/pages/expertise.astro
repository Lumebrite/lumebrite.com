	</section> -->
	</div>

	<script>
		import { gsap } from 'gsap';
		import { ScrollTrigger } from 'gsap/ScrollTrigger';
		gsap.registerPlugin(ScrollTrigger);

		// gsap.to('#home-splash', {
		// 	scrollTrigger: {
		// 		trigger: '#home-splash', // start the animation when "#home-splash" enters the viewport (once)

		// 		start: 'top center',
		// 		scrub: true,
		// 	},
		// 	scale: 0.5,
		// 	translateY: 300,
		// 	opacity: 0,
		// });

		gsap.to('#hero', {
			scrollTrigger: {
				trigger: '#header', // start the animation when trigger enters the viewport (once)
				start: 'top top',
				scrub: true,
				pin: true,
				pinSpacing: false,
			},
			// scale: 0.9,
			// translateY: 300,
			opacity: 0,
			blurElement: 20,
		});

		gsap.to('#splash', {
			scrollTrigger: {
				trigger: '#splash', // start the animation when trigger enters the viewport (once)
				start: 'top 15%',
				scrub: true,
				pin: true,
			},
			scale: 0.9,
			// translateY: 400,
			opacity: 0,
		});
	</script>
</Layout>
