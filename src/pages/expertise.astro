					<CardAwards />
					<CardContributions />
					<CardCurrentlyReading />
				</div>
				<div class="space-y-6">
					<CardGHBadges />
					<CardOpenSource />
					<CardWatercooler />
				</div>
				<div class="space-y-6">
					<CardTestimonials />
					<CardPhotography />
				</div>
			</div>
