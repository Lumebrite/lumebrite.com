---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon';

import ImgDesignSystem from './assets/service-features/design-system.svg';
import ImgIA from './assets/service-features/IA.svg';
import ImgPixelPerfect from './assets/service-features/pixel-perfect.svg';
import ImgTetris from './assets/service-features/tetris.svg';
---

<section id="product-design-expertise" class="pb-7">
	<article class="section-card pb-0 pt-8 sm:py-12">
		<div class="">
			<div class="px-6 sm:px-9 xl:px-12">
				<h3 class="mb-6 max-w-xl text-2xl font-light tracking-[-0.015em] text-white sm:text-3xl">
					Transparent, gaudited, <br /><span class="text-red-400">& open source</span>
				</h3>
				<p class="max-w-2xl text-base text-white/70 sm:text-lg">
					Fingerprint provides a complete view of your users across web and mobile. The visitor identification API identifies up to 99.5% of returning visitors, while Smart Signals
					provide actionable real-time intelligence about visitor intent.
				</p>
			</div>

			<div class="mt-24 grid grid-cols-1 gap-6 px-0 text-black lg:mt-32 lg:grid-cols-2 lg:px-9 xl:px-12">
				<div class="relative overflow-hidden bg-black/[0.15] lg:rounded-lg">
					<div class="px-6 pt-6 sm:px-9">
						<h4 class="mb-3 font-semibold leading-none text-white">Hand-coded Prototypes</h4>
						<p class="text-sm text-slate-200">Complete any action in seconds with the global command menu.</p>
					</div>
					<div class="flex aspect-[6/4] items-center justify-center sm:aspect-[12/7]">
						<Image src={ImgDesignSystem} alt="" />
					</div>
				</div>
				<div class="relative overflow-hidden bg-black/[0.15] lg:rounded-lg">
					<div class="px-6 pt-6 sm:px-9">
						<h4 class="mb-3 font-semibold leading-none text-white">Hand-coded Prototypes</h4>
						<p class="text-sm text-slate-200">Complete any action in seconds with the global command menu.</p>
					</div>
					<div class="flex aspect-[6/4] items-center justify-center sm:aspect-[12/7]">
						<Image src={ImgIA} alt="" />
					</div>
				</div>
				<div class="relative overflow-hidden bg-black/[0.15] lg:rounded-lg">
					<div class="px-6 pt-6 sm:px-9">
						<h4 class="mb-3 font-semibold leading-none text-white">Hand-coded Prototypes</h4>
						<p class="text-sm text-slate-200">Complete any action in seconds with the global command menu.</p>
					</div>
					<div class="flex aspect-[6/4] items-center justify-center sm:aspect-[12/7]">
						<Image src={ImgPixelPerfect} alt="" />
					</div>
				</div>
				<div class="relative overflow-hidden bg-black/[0.15] lg:rounded-lg">
					<div class="px-6 pt-6 sm:px-9">
						<h4 class="mb-3 font-semibold leading-none text-white">Hand-coded Prototypes</h4>
						<p class="text-sm text-slate-200">Complete any action in seconds with the global command menu.</p>
					</div>
					<div class="flex aspect-[6/4] items-center justify-center sm:aspect-[12/7]">
						<Image src={ImgTetris} alt="" />
					</div>
				</div>
			</div>
		</div>
	</article>
</section>

<script>
	import { gsap } from 'gsap';
	import { ScrollTrigger } from 'gsap/ScrollTrigger';
	gsap.registerPlugin(ScrollTrigger);

	ScrollTrigger.create({
		trigger: '#product-design-expertise',
		start: 'top center',
		end: 'bottom center',
		onEnter: () => {
			document.querySelector('#product-design-expertise .section-card').classList.add('is-active');
		},
		onLeave: () => {
			document.querySelector('#product-design-expertise .section-card').classList.remove('is-active');
		},
		onEnterBack: () => {
			document.querySelector('#product-design-expertise .section-card').classList.add('is-active');
		},
		onLeaveBack: () => {
			document.querySelector('#product-design-expertise .section-card').classList.remove('is-active');
		},
	});
</script>
