<script>
	import { gsap } from 'gsap';
	import { ScrollTrigger } from 'gsap/ScrollTrigger';
	gsap.registerPlugin(ScrollTrigger);

	ScrollTrigger.create({
		trigger: '#product-design-expertise',
		start: 'top center',
		end: 'bottom center',
		onEnter: () => {
			document.querySelector('#product-design-expertise .section-card').classList.add('is-active');
		},
		onLeave: () => {
			document.querySelector('#product-design-expertise .section-card').classList.remove('is-active');
		},
		onEnterBack: () => {
			document.querySelector('#product-design-expertise .section-card').classList.add('is-active');
		},
		onLeaveBack: () => {
			document.querySelector('#product-design-expertise .section-card').classList.remove('is-active');
		},
	});
</script>
